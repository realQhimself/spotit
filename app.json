{
  "expo": {
    "name": "SpotIt",
    "slug": "spotit",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#4F46E5"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.spotit.app",
      "infoPlist": {
        "NSCameraUsageDescription": "SpotIt needs camera access to scan and identify items in your rooms.",
        "NSPhotoLibraryUsageDescription": "SpotIt needs photo library access to save scanned item photos.",
        "NSPhotoLibraryAddUsageDescription": "SpotIt needs permission to save photos of scanned items."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#4F46E5"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.spotit.app",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "plugins": [
      "expo-secure-store"
    ],
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/favicon.png"
    },
    "experiments": {
      "baseUrl": "/spotit"
    }
  }
}
